<?xml version="1.0"  encoding="UTF-8"?>

<project default="build" basedir="." name="peparser">

	<property file="build.properties"/>

	<path id="lib.path">
		<pathelement path="web/WEB-INF/classes"/>
		<fileset dir="lib">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="web/WEB-INF/lib">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	
	<target name="init">
		<mkdir dir="web/WEB-INF/classes"/>
	</target>
	
	<target name="java" depends="init">
		<javac destdir="web/WEB-INF/classes" encoding="UTF-8" debug="on">
			<src path="java"/>
			<src path="docs"/>
			<classpath refid="lib.path"/>
		</javac>
		<copy todir="web/WEB-INF/classes">
			<fileset dir="java">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	</target>

	<target name="build" depends="java">
	</target>

	<target name="clean">
		<delete includeEmptyDirs="true">
			<fileset dir="web/WEB-INF/classes"/>
		</delete>

	</target>

</project>
